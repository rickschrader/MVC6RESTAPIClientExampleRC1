@model MVC6ApiClientExample.Models.Album

@{
    ViewBag.Title = "Add New Album";
}

<h1>@ViewBag.Title</h1>

<p>
    @Html.ActionLink("Back to List", "Index", "Albums", null, new { @class = "btn btn-primary" })
</p>

@using (Html.BeginForm())
{

    if (Model != null)
    {
        <fieldset>

            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Artist)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Artist)
                @Html.ValidationMessageFor(model => model.Artist)
            </div>
            <div class="navigation">
                <div class="buttonholder">
                    <input type="submit" value="Save" class="btn btn-default btn-success" />
                </div>
            </div>
        </fieldset>
    }
}