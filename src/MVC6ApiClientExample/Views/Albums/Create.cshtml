@model MVC6ApiClientExample.Models.Album

@{
    ViewBag.Title = "Add New Album";
}

<h1>@ViewBag.Title</h1>

<p>
    <a asp-controller="Albums" asp-action="Index" class="btn btn-primary">Back to List</a>
</p>

@using (Html.BeginForm())
{

    if (Model != null)
    {
        <fieldset>

            <label class="control-label">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>

            <label class="control-label">Artist</label>
            <input asp-for="Artist" class="form-control" />
            <span asp-validation-for="Artist"></span>

            <div class="navigation">
                <div class="buttonholder">
                    <input type="submit" value="Save" class="btn btn-default btn-success" />
                </div>
            </div>
        </fieldset>
    }
}