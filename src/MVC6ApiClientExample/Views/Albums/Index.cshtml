
@model List<MVC6ApiClientExample.Models.Album>

@{ 
    ViewBag.Title = "Albums";
}

<h2>@ViewBag.Title</h2>

<table>
    <tr>
        <th>Title</th>
        <th>Artist</th>
        <th></th>
    </tr>
    @foreach(var album in Model)
    {
        <tr>
            <td>@Html.ActionLink(album.Title, "Detail", new { id = album.Id })</td>
            <td>@album.Artist</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = album.Id })</td>
        </tr>
    }
</table>
